{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "description": "this is my Crxjs&React Chrome ext",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["src/content/content.ts", "src/content/content.tsx"],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
