{
  "manifest_version": 3,
  "name": "Accounts Keeper",
  "description": "record and manage your accounts",
  "version": "1.0.0",
  "permissions": ["sidePanel", "storage"],
  "side_panel": {
    "default_path": "src/main/panel/panel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "content_scripts": [
    {
      "js": ["src/content/content.ts", "src/content/content.tsx"],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
