{
  "manifest_version": 3,
  "name": "Accounts Keeper",
  "description": "record and manage your accounts, by react",
  "version": "1.0.0",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "src/main/panel/panel.html",
    "default_width": 400
  },
  "icons": {
    "16": "public/favicon.ico",
    "48": "public/favicon-16x16.png",
    "128": "public/favicon-32x32.png"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "content_scripts": [
    {
      "js": [
        "src/content/content.ts-loader.js",
        "src/content/content.tsx-loader.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ]
}
